<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercise1Activity">
    
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#03A876"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#598E0A"
        android:layout_gravity="center|top"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#A4EB44"
        android:layout_gravity="right"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#9C27B0"
        android:layout_gravity="center|start"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#066697"
        android:layout_gravity="center"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#6BC6F8"
        android:layout_gravity="center|right"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#F61405"
        android:layout_gravity="center|bottom|start"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#FF5722"
        android:layout_gravity="center|bottom"/>
    <View
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="#DBB6B4"
        android:layout_gravity="center|bottom|right"
        android:textAlignment="center" />
</FrameLayout>